{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
//        "indent": [
//            "error",
//            2
//        ],
        "quotes": [
            "error",
            "double"
        ],
        "jsx-quotes": [
            "error",
            "prefer-double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "react/prop-types": [
            2,
            {
                "ignore": ["children"]
            }
        ],
        "react/display-name": [
            "off"
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
